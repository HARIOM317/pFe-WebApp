        <h2 class="g-font1 fs-1 my-2">Update Employee Data</h2>

        <form class="row g-3 needs-validation" novalidate>

            <div class="col-md-6">
                <label for="firstname" class="form-label">First name</label>
                <input type="text" class="form-control input_design" id="firstname" required>
                <div class="valid-feedback">
                    Please Enter Valid First Name
                </div>
            </div>
            <div class="col-md-6">
                <label for="lastname" class="form-label">Last name</label>
                <input type="text" class="form-control input_design" id="lastname" required>
                <div class="valid-feedback">
                    Please Enter Valid Last Name
                </div>
            </div>
            <div class="col-md-6">
                <label for="mobilenumber" class="form-label">Mobile Number</label>
                <input type="text" class="form-control input_design" id="mobilenumber" required>
                <div class="valid-feedback">
                    Please Enter Valid Mobile Number
                </div>
            </div>
            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control input_design" id="email" required>
                <div class="invalid-feedback">
                    Please Enter Valid Email Address
                </div>
            </div>
            <div class="col-md-12">
                <label for="station" class="form-label">Station Name</label>
                <input type="text" class="form-control input_design" id="station" required>
                <div class="invalid-feedback">
                    Please Enter Valid Station Name
                </div>
            </div>

            <div class="col-md-4">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control input_design" id="city" required>
                <div class="invalid-feedback">
                    Please provide a valid city.
                </div>
            </div>
            <div class="col-md-4">
                <label for="state" class="form-label">State</label>
                <select class="form-select option-design" id="state" required>
                    <option selected disabled value="">Select State</option>
                    <option value="1">Andhra Pradesh</option>
                    <option value="1">Arunachal Pradesh</option>
                    <option value="1">Assam</option>
                    <option value="1">Bihar</option>
                    <option value="1">Chhattisgarh</option>
                    <option value="1">Goa</option>
                    <option value="1">Gujarat</option>
                    <option value="1">Haryana</option>
                    <option value="1">Himachal Pradesh</option>
                    <option value="1">Jharkhand</option>
                    <option value="1">Karnataka</option>
                    <option value="1">Kerala</option>
                    <option value="1">Madhya Pradesh</option>
                    <option value="1">Maharashtra</option>
                    <option value="1">Manipur</option>
                    <option value="1">Meghalaya</option>
                    <option value="1">Mizoram</option>
                    <option value="1">Nagaland</option>
                    <option value="1">Odisha</option>
                    <option value="1">Punjab</option>
                    <option value="1">Rajasthan</option>
                    <option value="1">Sikkim</option>
                    <option value="1">Tamil Nadu</option>
                    <option value="1">Telangana</option>
                    <option value="1">Tripura</option>
                    <option value="1">Uttar Pradesh</option>
                    <option value="1">Uttarakhand</option>
                    <option value="1">West Bengal</option>

                </select>
                <div class="invalid-feedback">
                    Please select a valid state.
                </div>
            </div>
            <div class="col-md-4">
                <label for="zip" class="form-label">Zip Code</label>
                <input type="text" class="form-control input_design" id="zip" required>
                <div class="invalid-feedback">
                    Please provide a valid zip.
                </div>
            </div>
            <div class="col-md-12">
                <label for="assignment" class="form-label">Assigned Work</label>
                <input type="text" class="form-control input_design" id="assignment" required>
                <div class="invalid-feedback">
                    Please Enter Valid Assigned Work.
                </div>
            </div>
            <div class="col-md-4">
                <label for="rank" class="form-label">Officer Rank</label>
                <input type="text" class="form-control input_design" id="rank" required>
                <div class="invalid-feedback">
                    Please Enter Valid Officer Rank
                </div>
            </div>
            <div class="col-md-4">
                <label for="work-status" class="form-label">Work Status</label>
                <select class="form-select option-design" id="work-status" required>
                    <option value="1">Working</option>
                    <option value="1">Complete</option>
                </select>
                <div class="invalid-feedback">
                    Please select a valid work status.
                </div>
            </div>
            <div class="col-md-4">
                <label for="officer-status" class="form-label">Officer Status</label>
                <select class="form-select option-design" id="officer-status" required>
                    <option value="1">Active</option>
                    <option value="1">Inactive</option>
                </select>
                <div class="invalid-feedback">
                    Please select a valid officer status.
                </div>
            </div>
            <div class="col-md-6">
                <label for="transfer" class="form-label">Transfer</label>
                <input type="text" class="form-control input_design" id="transfer" required>
                <div class="invalid-feedback">
                    Please provide a valid Transfer.
                </div>
            </div>
            <div class="col-md-6">
                <label for="promotion" class="form-label">Promotion</label>
                <input type="text" class="form-control input_design" id="promotion" required>
                <div class="invalid-feedback">
                    Please provide a valid Promotion.
                </div>
            </div>



            <div class="col-md-12">
                <label for="achievements" class="form-label">Achievements</label>
                <textarea class="form-control input_design" id="achievements" rows="5"></textarea>
            </div>


            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="confirm-to-add" required>
                    <label class="form-check-label" for="invalidCheck">
                        Confirm Update Employee Data
                    </label>
                    <div class="invalid-feedback">
                        You are not confirm to update employee data.
                    </div>
                </div>
            </div>
            <div class="col-12">
                <button class="btn btn-primary px-5" type="submit">UPDATE</button>
            </div>
        </form>
